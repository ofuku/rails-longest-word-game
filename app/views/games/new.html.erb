<h1>Games#new</h1>
<p><%= @LETTERS %></p>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="What is the longest word you can find??">
  <input type="hidden" name="random_letters" value="<%= @LETTERS %>" >
  <input type="submit" value="play">
</form>
